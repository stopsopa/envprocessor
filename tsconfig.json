{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "moduleResolution": "nodenext",
    "target": "ESNext",
    "module": "nodenext",
    "allowSyntheticDefaultImports": true, // import path from 'path';
    "esModuleInterop": true,
    "resolveJsonModule": true // Add this line
  },
  "include": ["src/**/*.js", "src/**/*.cjs"],
  "exclude": ["examples/preprocessorMiddleware.js"] // Add this line
}
